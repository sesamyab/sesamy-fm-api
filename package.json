{
  "name": "podcast-service",
  "version": "1.0.0",
  "description": "Podcast Service - Service Standard v1 compliant API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev src/worker.ts",
    "dev:local": "tsx watch --clear-screen=false src/main.ts",
    "build": "npx tsc -p tsconfig.worker.json",
    "build:local": "tsc",
    "deploy": "wrangler deploy",
    "start": "node dist/main.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "generate-token": "tsx src/scripts/generate-token.ts"
  },
  "keywords": [
    "service-standard-v1",
    "podcast",
    "api",
    "hono",
    "zod",
    "openapi",
    "sqlite",
    "drizzle"
  ],
  "author": "Service Standard v1",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/containers": "^0.0.19",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.16.4",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.9.5",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250831.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.56.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^2.0.5",
    "wrangler": "^4.34.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
