{
  "name": "sesamy-encoding-cdk",
  "version": "1.0.0",
  "description": "AWS CDK deployment for Sesamy FFmpeg Encoding Service",
  "main": "lib/encoding-stack.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy",
    "deploy:dev": "npm run build && cdk deploy --context environment=dev",
    "deploy:prod": "npm run build && cdk deploy --context environment=prod",
    "diff": "npm run build && cdk diff",
    "synth": "npm run build && cdk synth",
    "bootstrap": "cdk bootstrap",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "20.1.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "aws-cdk": "2.100.0",
    "typescript": "~4.9.4"
  },
  "dependencies": {
    "aws-cdk-lib": "2.100.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.16"
  }
}
